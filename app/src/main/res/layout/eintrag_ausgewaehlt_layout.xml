<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutStandardAktion"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextEintrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imageButtonEintragLoeschen"
            android:background="@drawable/ic_clear_black_48px"
            android:contentDescription="@string/standard_imbut_description" />

        <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imageButtonSendenAusEintrag"
            android:background="@drawable/ic_send_black_48px"
            android:contentDescription="@string/standard_imbut_description" />

    </LinearLayout>



</LinearLayout>